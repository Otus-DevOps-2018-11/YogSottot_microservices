extends: default

ignore: |
    *
    !*.yaml
    !*.yml
    kubernetes/Charts/gitlab-omnibus/
    kubernetes/Charts/prometheus/templates/
    kubernetes/Charts/prometheus/values.yaml

rules:
  braces:
    max-spaces-inside: 1
    level: error
  brackets:
    max-spaces-inside: 1
    level: error
  line-length: disable
  # NOTE(retr0h): Templates no longer fail this lint rule.
  #               Uncomment if running old Molecule templates.
  # truthy: disable
